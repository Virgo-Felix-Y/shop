/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.section {
  display: flex;
}

.scroll-view-item {
  height: 100rpx;
  flex-direction: column;
  vertical-align: middle;
}

.class_list {
  width: 20%;
  border: 1px solid red;
}

.class_name {
  width: 100%;
  height: 80%;
}

.scroll-view_H {
  display: flex;
  white-space: nowrap;
}

.scroll-view-item_H {
  height: 100rpx;
  width: 300rpx;
  display: inline-block;
  text-align: center;
  flex-direction: column;
}

.dishes_list {
  width: 80%;
  border: 1px solid red;
}

.bc_green {
  background-color: green;
}

.bc_red {
  background-color: red;
}

.bc_yellow {
  background-color: yellow;
}

.bc_blue {
  background-color: blue;
}

.dishesFrame {
  width: 50%;
  display: inline-block;
  height: 100rpx;
}

.dishesFrame image {
  width: 100%;
  height: 100%;
}
